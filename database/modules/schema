CREATE TABLE `myanimestats`.`producer` (
  `id` INT NOT NULL,
  `jikan_id` INT NULL,
  `producer_name` VARCHAR(255) NULL,
  PRIMARY KEY (`id`));


  CREATE TABLE `myanimestats`.`licensor` (
    `id` INT NOT NULL,
    `jikan_id` INT NULL,
    `licensor_name` VARCHAR(255) NULL,
    PRIMARY KEY (`id`));

    CREATE TABLE `myanimestats`.`studio` (
      `id` INT NOT NULL,
      `jikan_id` INT NULL,
      `studio_name` VARCHAR(255) NULL,
      PRIMARY KEY (`id`));

      CREATE TABLE `myanimestats`.`genre` (
        `id` INT NOT NULL,
        `jikan_id` INT NULL,
        `genre_name` VARCHAR(255) NULL,
        PRIMARY KEY (`id`));

        CREATE TABLE `myanimestats`.`anime` (
          `id` INT NOT NULL,
          `link_canonical` VARCHAR(255) NULL,
          `synopsis` LONGTEXT NULL,
          `title` VARCHAR(255) NULL,
          `image` VARCHAR(4255) NULL,
          `synonyms` LONGTEXT NULL,
          `japanese` VARCHAR(255) NULL,
          `type` VARCHAR(255) NULL,
          `episodes` INT NULL,
          `status` VARCHAR(255) NULL,
          `aired` VARCHAR(255) NULL,
          `source` VARCHAR(255) NULL,
          `duration` VARCHAR(255) NULL,
          `rating` VARCHAR(255) NULL,
          `score` VARCHAR(255) NULL,
          `ranked` INT NULL,
          `popularity` INT NULL,
          `members` INT NULL,
          `favorites` INT NULL,
          `opening_theme` LONGTEXT NULL,
          `ending_theme` LONGTEXT NULL,
          `producer` VARCHAR(255) NULL,
          `licensor` VARCHAR(255) NULL,
          `studio` VARCHAR(255) NULL,
          `genre` VARCHAR(255) NULL,
          PRIMARY KEY (`id`));
